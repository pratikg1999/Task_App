<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".TaskEditActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:padding="20sp"
                android:textSize="20sp"
                android:maxLength="50"
                android:layout_margin="15dp"
                android:background="@drawable/edit_text_bg"
                android:inputType="text"
                android:hint="Enter the title" />

            <EditText
                android:id="@+id/et_body"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="20sp"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:background="@drawable/edit_text_bg"
                android:gravity="top"
                android:inputType="text"
                android:hint="Enter the body" />

            <CheckBox
                android:layout_marginHorizontal="15dp"
                android:id="@+id/cb_edit_done_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set completion status" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:gravity="fill_horizontal"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights"></Space>

            <ImageButton
                android:id="@+id/bt_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@null"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_save_black_24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>


            <ImageButton
                android:id="@+id/bt_share_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@null"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_share_black_24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>

            <ImageButton
                android:id="@+id/bt_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@null"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_delete_black_24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></Space>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
